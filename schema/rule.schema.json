{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Rule Entry (v0)",
  "type": "object",
  "required": ["rule_id", "operator_stack", "doc_id", "loc", "stage", "criteria", "review_status", "version"],
  "properties": {
    "rule_id": { "type": "string", "minLength": 1 },
    "operator_stack": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "doc_id": { "type": "string", "minLength": 1 },
    "loc": { "type": "string", "minLength": 1 },
    "stage": {
      "type": "string",
      "enum": [
        "Dynamic Modeling",
        "Dynamic Study",
        "Engineering",
        "Energization",
        "Facility Review",
        "Intake",
        "Large Load Intake",
        "Operations",
        "Post-Energization",
        "Post-Study",
        "Pre-Energization",
        "Screening",
        "Study"
      ]
    },
    "study_type": { "type": "string" },
    "criteria": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "text": { "type": "string", "minLength": 1 },
        "dsl": { "type": "object" }
      },
      "additionalProperties": true
    },
    "trigger_tags": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "review_status": { "type": "string", "enum": ["draft", "reviewed", "published"] },
    "review_notes": { "type": "string" },
    "memo_guidance": {
      "type": "object",
      "description": "Optional memo guidance for human next actions (not citation-audited). Policy: only populate and render when it can be verified against docs/raw and/or internal process materials, and keep it deterministic per rule.",
      "properties": {
        "verified": {
          "type": "boolean",
          "description": "If true, guidance is asserted to be verifiable against sources in docs/raw / process materials and may be shown in the memo UI. If false/absent, guidance should be treated as draft and not rendered."
        },
        "sources": {
          "type": "array",
          "description": "Sources supporting this guidance (doc_id + loc). These are not PDF-audited like rule citations, but they document where the guidance came from.",
          "items": {
            "type": "object",
            "required": ["doc_id", "loc"],
            "properties": {
              "doc_id": { "type": "string", "minLength": 1 },
              "loc": { "type": "string", "minLength": 1 },
              "notes": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "owner": {
          "type": "string",
          "description": "Who should drive/push this action (examples: Developer, EPC, TDSP, TSP, ERCOT)."
        },
        "recipient": {
          "type": "string",
          "description": "Who should receive/confirm this action (examples: Lead TSP, TDSP, ERCOT)."
        },
        "evidence": {
          "type": "array",
          "description": "Concrete proof artifacts that indicate the action is complete (e.g., email confirmation, test report ID, ticket number).",
          "items": { "type": "string" }
        },
        "what_to_do": {
          "type": "string",
          "description": "One-liner plain-language action (memo-friendly)."
        }
      },
      "additionalProperties": true
    },
    "version": { "type": "string", "minLength": 1 }
  },
  "additionalProperties": true
}
