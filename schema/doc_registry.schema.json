{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Texas Large Load Doc Registry (v0)",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["doc_id", "title", "source_url", "scope_tags"],
    "properties": {
      "doc_id": { "type": "string", "minLength": 1 },
      "title": { "type": "string", "minLength": 1 },
      "source_url": { "type": "string", "minLength": 1 },
      "retrieved_date": { "type": "string" },
      "effective_date": { "type": "string" },
      "hash": { "type": "string" },
      "scope_tags": {
        "type": "array",
        "items": { "type": "string" }
      },
      "artifacts": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["kind", "path"],
          "properties": {
            "kind": { "type": "string", "enum": ["pdf", "html", "txt", "other"] },
            "path": { "type": "string", "minLength": 1 },
            "sha256": { "type": "string" },
            "size_bytes": { "type": "integer", "minimum": 0 },
            "retrieved_date": { "type": "string" }
          },
          "additionalProperties": true
        }
      }
    },
    "additionalProperties": true
  }
}
